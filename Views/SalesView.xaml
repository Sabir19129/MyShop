                Text="{Binding Sales.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sales Date:" VerticalAlignment="Center" Margin="0,0,1,0"/>
